        <!-- Mobile nav -->
        <div id="mobile-menu" class="hidden md:hidden pb-4">
          <div class="flex flex-col gap-1 pt-3 border-t border-sage-100/60">
            {navLinks.map(link => (
              <a
                href={link.href}
                class:list={[
                  "text-sm font-medium py-2.5 px-3 rounded-lg transition-colors",
                  link.match(currentPath)
                    ? "text-sage-700 bg-sage-100/60"
                    : "text-warm-600 hover:text-sage-700 hover:bg-sage-50",
                ]}
              >
                {link.label}
              </a>
            ))}
            <a
              href="/#booking"
              class="bg-sage-600 text-white px-5 py-2.5 rounded-full text-sm font-medium text-center hover:bg-sage-700 transition-all duration-300 mt-2"
            >
              Записаться
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
