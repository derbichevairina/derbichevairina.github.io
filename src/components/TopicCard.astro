---
interface Props {
  title: string;
  href: string;
  icon: string;
}

const { title, href, icon } = Astro.props;
---

<a
  href={href}
  class="group relative flex flex-col items-center text-center p-5 sm:p-6 rounded-2xl bg-white/70 backdrop-blur-sm border border-sage-100/80 hover:border-sage-300 hover:shadow-medium hover:bg-white transition-all duration-300 ease-fluid"
>
  <div class="w-12 h-12 sm:w-14 sm:h-14 rounded-xl bg-sage-100/80 flex items-center justify-center mb-3 group-hover:bg-sage-200 group-hover:scale-105 transition-all duration-300 ease-fluid">
    <span class="text-xl sm:text-2xl">{icon}</span>
  </div>
  <span class="text-xs sm:text-sm font-medium text-warm-700 group-hover:text-sage-700 transition-colors duration-300 leading-snug">{title}</span>
</a>
