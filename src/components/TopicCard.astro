---
interface Props {
  title: string;
  href: string;
  iconPath: string;
}

const { title, href, iconPath } = Astro.props;
---

<a
  href={href}
  class="group flex items-center gap-3 p-3 sm:p-4 rounded-xl hover:bg-sage-50/80 transition-all duration-200"
>
  <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-sage-100/60 flex items-center justify-center group-hover:bg-sage-200/80 transition-colors duration-200">
    <svg class="w-5 h-5 text-sage-500 group-hover:text-sage-600 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <Fragment set:html={iconPath} />
    </svg>
  </div>
  <span class="text-sm font-medium text-warm-700 group-hover:text-sage-700 transition-colors duration-200 leading-snug">{title}</span>
</a>
