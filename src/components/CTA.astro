---
interface Props {
  title?: string;
  subtitle?: string;
  compact?: boolean;
}

const {
  title = "Запишитесь на первую сессию",
  subtitle = "Первая встреча — это знакомство. Она ни к чему вас не обязывает.",
  compact = false,
} = Astro.props;
---

<section class:list={[
  "relative overflow-hidden rounded-2xl sm:rounded-3xl text-center",
  compact ? "p-6 sm:p-8" : "p-8 sm:p-12 lg:p-16",
]}>
  <!-- Gradient background -->
  <div class="absolute inset-0 bg-gradient-to-br from-sage-50 via-sage-100/50 to-warm-100/30"></div>
  <div class="absolute top-0 right-0 w-64 h-64 bg-sage-200/30 rounded-full blur-3xl -translate-y-1/2 translate-x-1/4"></div>
  <div class="absolute bottom-0 left-0 w-48 h-48 bg-warm-200/20 rounded-full blur-3xl translate-y-1/2 -translate-x-1/4"></div>

  <div class="relative z-10">
    <h2 class:list={[
      "font-display text-sage-800 text-balance",
      compact ? "text-xl sm:text-2xl mb-2" : "text-2xl sm:text-3xl lg:text-4xl mb-3",
    ]}>{title}</h2>
    <p class:list={[
      "text-warm-500 max-w-lg mx-auto text-pretty",
      compact ? "text-sm mb-6" : "mb-8",
    ]}>{subtitle}</p>

    <a
      href="/#booking"
      class="inline-flex items-center justify-center gap-2.5 bg-sage-600 text-white px-8 sm:px-10 py-3.5 sm:py-4 rounded-full font-medium text-lg hover:bg-sage-700 hover:shadow-glow active:scale-[0.98] transition-all duration-300 ease-fluid"
    >
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
        <line x1="16" y1="2" x2="16" y2="6"></line>
        <line x1="8" y1="2" x2="8" y2="6"></line>
        <line x1="3" y1="10" x2="21" y2="10"></line>
      </svg>
      Выбрать время
    </a>

    <p class="text-warm-400 text-sm mt-6">Консультация — 5 000 ₽ / 60 минут</p>

    <p class="text-warm-400 text-sm mt-3">
      или напишите в
      <a href="https://t.me/derbichevairina" target="_blank" rel="noopener" class="text-sage-600 hover:text-sage-700 underline underline-offset-2 transition-colors">Telegram</a>
      /
      <a href="https://wa.me/+79028983895" target="_blank" rel="noopener" class="text-sage-600 hover:text-sage-700 underline underline-offset-2 transition-colors">WhatsApp</a>
    </p>
  </div>
</section>
